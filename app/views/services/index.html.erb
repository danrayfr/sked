<% content_for(:title) { "Organization | Services" } %>

<%= content_for :aside do %>
   <%= render "layouts/shared/sidebar" %>
<% end %>

<%= content_for :header_title do %>
  <ul class="flex items-center text-sm ml-4">
    <li class="text-gray-700 mr-2 font-medium text-md">Services</li>
  </ul>
<% end %>

<%= content_for :header do %>
  <%= render "layouts/shared/navbar" %>
<% end %>

<div class="mx-auto p-6">
  <div class="p-4 bg-white block sm:flex items-center justify-between border-b border-gray-200 lg:mt-1.5">
    <div class="w-full mb-1">
      <div class="mb-4">
          <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl">Services</h1>
      </div>
      <div class="items-center justify-between block sm:flex md:divide-x md:divide-gray-100">
        <div class="flex items-center mb-4 sm:mb-0">
            List of services available in your organization
        </div>

        <%= link_to new_organization_service_url(Current.organization.uid) do %>
          <button id="createProductButton" class="text-white bg-gigas hover:bg-bluebell focus:ring-4 focus:ring-linkwater font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none " type="button">
              Add new service
          </button>
        <% end if Current.user.can_manage? %>
      </div>
  </div>
</div>

<div class="flex flex-col">
  <div class="overflow-x-auto">
    <div class="inline-block min-w-full align-middle">
      <div class="overflow-hidden shadow">
        <table class="min-w-full divide-y divide-gray-200 table-fixed">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="p-4 text-xs font-medium text-left text-gray-500 uppercase">
                Service name
              </th>
              <th scope="col" class="p-4 text-xs font-medium text-left text-gray-500 uppercase">
                Cost
              </th>
              <th scope="col" class="p-4 text-xs font-medium text-left text-gray-500 uppercase">
                Posted
              </th>
              <th scope="col" class="p-4 text-xs font-medium text-left text-gray-500 uppercase">
                <span class="sr-only">actions</span>
              </th>
            </tr>
          </thead>
          <%= render @services %>
        </table>
      </div>
    </div>
  </div>
</div>

