<% content_for(:title) { "Organization | #{@organization.name}" } %>

<%= content_for :aside do %>
   <%= render "layouts/shared/sidebar" %>
<% end %>

<%= content_for :header_title do %>
  <ul class="flex items-center text-sm ml-4">
    <li class="mr-2">
      <%= link_to "Organization", root_path, class: "text-gray-600 font-medium text-md" %>
    </li>
    <li class="text-gray-700 mr-2 font-medium text-md">/</li>
    <li class="text-gray-700 mr-2 font-medium text-md">
      <%= @organization.uid %>
    </li>
    <li class="text-gray-700 mr-2 font-medium text-md">/</li>
    <li class="text-gray-500 mr-2 font-medium text-md">Edit</li>
  </ul>
<% end %>

<%= content_for :header do %>
  <%= render "layouts/shared/navbar" %>
<% end %>

<div class="mx-auto p-6">

<div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm sm:p-6">
  <h3 class="mb-4 text-xl font-medium">Edit organization</h3>
  <p class="mt-1 text-sm leading-6 text-gray-600">This information will be displayed publicly so be careful what you share.</p>

  <%= form_with model: @organization, url: organization_path(@organization.uid) do |form| %>
    <div class="grid grid-cols-6 gap-6 mt-4">

      <div class="col-span-6">
        <label for="name" class="block mb-2 text-sm font-medium text-gray-900">Name</label>
        <%= form.text_field :name, id: "name", autocomplete: "name", class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5" %>
      </div>

      <div class="col-span-6">
        <%= form.label :slug, 'URL', class: "block mb-2 text-sm font-medium text-gray-900" %>
        <div class="mt-2">
          <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
            <span class="flex select-none items-center pl-3 text-gray-500 sm:text-sm"><%= root_url %></span>
            <%= form.text_field :slug, placeholder: "janesmith", class: "block flex-1 border-0 bg-transparent py-2.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" %>
          </div>
        </div>
      </div>

      <div class="col-span-6 sm:col-span-3">
        <label for="name" class="block mb-2 text-sm font-medium text-gray-900">Organization ID</label>
        <%= form.text_field :uid, class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5", readonly: true %>
      </div>

      <div class="col-span-6 sm:col-span-3">
        <label for="name" class="block mb-2 text-sm font-medium text-gray-900">Join Code</label>
        <%= form.text_field :join_code, class: "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5", readonly: true %>
      </div>

      <div class="col-span-6 sm:col-full">
        <button
          class="text-white bg-indigo-700 hover:bg-indigo-800 focus:ring-4 focus:ring-indigo-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
          type="submit"
          id="edit_organization"
        >
          Update
        </button>
        <%= link_to "Cancel", root_path, class: "text-sm font-semibold leading-6 text-gray-700 ml-2" %>
      </div>
    </div>
  <% end %>
</div>

</div>
