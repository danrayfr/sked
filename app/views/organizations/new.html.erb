<% content_for(:title) { "Setup organzization" } %>

<div class="mx-auto p-6">

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">

  <div class="space-y-12">
    <div class="bg-white border border-gray-100 shadow-md shadow-black/5 p-6 rounded-md border-b border-gray-900/10">
      <h2 class="text-base font-semibold leading-7 text-gray-900">Organization</h2>
      <p class="mt-1 text-sm leading-6 text-gray-600">This information will be displayed publicly so be careful what you share.</p>

      <%= form_with model: @organization, class: "" do |form| %>
        <div class="sm:col-span-4 pb-6">
          <label for="name" class="block text-sm font-medium leading-6 text-gray-900">Name</label>
          <div class="mt-2">
            <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
              <%= form.text_field :name, id: "name", autocomplete: "name", class: "block flex-1 border-0 bg-transparent py-1.5 pl-3 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" %>
            </div>
          </div>
        </div>

        <div>
          <button type="submit" id="edit_organization" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save</button>
        </div>
      <% end %>

    </div>
  </div>

  </div>

</div>

