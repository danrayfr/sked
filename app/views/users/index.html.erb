<% content_for(:title) { "Users" } %>

<%= content_for :aside do %>
   <%= render "layouts/shared/sidebar" %>
<% end %>

<%= content_for :header_title do %>
  <ul class="flex items-center text-sm ml-4">
    <li class="mr-2">
      <a class="text-gray-600 font-medium text-md">Dashboard</a>
    </li>
  </ul>
<% end %>

<%= content_for :header do %>
  <%= render "layouts/shared/navbar" %>
<% end %>

<div class="mx-auto p-6">
  <div class="grid grid-cols-1 px-4 pt-6 xl:grid-cols-3 xl:gap-4">

    <div class="mb-4 col-span-full xl:mb-2">
      <nav class="flex mb-5" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 text-sm font-medium md:space-x-2">
          <li class="inline-flex items-center">
            <a href="#" class="inline-flex items-center text-gray-700 hover:text-indigo-600">
            <svg class="w-5 h-5 mr-2.5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
            </svg>
            Home
            </a>
          </li>
          <li>
            <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <a href="#" class="ml-1 text-gray-700 hover:text-indigo-600 md:ml-2 ">Users</a>
            </div>
          </li>
          <li>
            <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="ml-1 text-gray-400 md:ml-2" aria-current="page">Settings</span>
            </div>
          </li>
        </ol>
      </nav>
      <h1 class="text-xl font-medium text-gray-800 sm:text-2xl">User settings</h1>
    </div>

    <!-- grid boxes -->
  <div class="col-span-full xl:col-auto">
    <div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2 sm:p-6">
      <div class="items-center sm:flex xl:block 2xl:flex sm:space-x-4 xl:space-x-0 2xl:space-x-4">
        <img class="mb-4 rounded-lg w-28 h-28 sm:mb-0 xl:mb-4 2xl:mb-0" src="https://flowbite-admin-dashboard.vercel.app/images/users/bonnie-green-2x.png" alt="Jese picture" />
        <div>
          <h3 class="mb-1 text-xl font-bold text-gray-900">Profile picture</h3>
          <div class="mb-4 text-sm text-gray-500">
            JPG, GIF or PNG. Max size of 800K
          </div>
          <div class="flex items-center space-x-4">
            <button
              type="button"
              class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white rounded-lg bg-indigo-700 hover:bg-indigo-800 focus:ring-4 focus:ring-indigo-300"
            >
              <svg class="w-4 h-4 mr-2 -ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path d="M5.5 13a3.5 3.5 0 01-.369-6.98 4 4 0 117.753-1.977A4.5 4.5 0 1113.5 13H11V9.413l1.293 1.293a1 1 0 001.414-1.414l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13H5.5z"></path>
                <path d="M9 13h2v5a1 1 0 11-2 0v-5z"></path>
              </svg>
              Upload picture
            </button>
            <button
              type="button"
              class="py-2 px-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-indigo-700 focus:z-10 focus:ring-4 focus:ring-gray-200"
            >
              Delete
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2 sm:p-6">
      <h3 class="mb-4 text-xl font-semibold">Current User Information</h3>
      <form action="#">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-6">
            <label for="first-name" class="block mb-2 text-sm font-medium text-gray-900">Name</label>
            <input
              type="text"
              name="name"
              id="name"
              class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5"
              value="<%= Current.user.name %>"
              readonly
            />
          </div>

          <div class="col-span-6">
            <label for="first-name" class="block mb-2 text-sm font-medium text-gray-900">First Name</label>
            <input
              type="text"
              name="email_address"
              id="email_address"
              class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5"
              value="<%= Current.user.email_address %>"
              readonly
            />
          </div>

          <div class="col-span-6 sm:col-full">
            <%= link_to user_profile_url(user_id: Current.user.id) do %>
              <button
                class="text-white bg-indigo-700 hover:bg-indigo-800 focus:ring-4 focus:ring-indigo-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
                type="submit"
              >
                View Profile
              </button>
            <% end %>

            <%= link_to session_path, data: { turbo_method: :delete } do %>
              <button
                class="text-white bg-indigo-700 hover:bg-indigo-800 focus:ring-4 focus:ring-indigo-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
                type="submit"
              >
                Sign out
              </button>
            <% end %>
          </div>
        </div>
      </form>
    </div>
    </div>

    <div class="col-span-2">
      <% if Current.user.can_manage? %>

      <div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2">
      <h3 class="mb-4 text-xl font-semibold">Share to invite more patients.</h3>

      <div class="mb-4">
        <% url = join_url(Current.organization.uid, Current.organization.join_code) %>

          <div class="col-span-6">
            <label for="first-name" class="block mb-2 text-sm font-medium text-gray-900">Shareable URL</label>
            <input
              type="text"
              id="invite_url"
              value="<%= url %>"
              class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5"
              readonly
            />
          </div>
      </div>
      <div>
        <%= button_to organization_join_code_path(Current.organization.uid) do %>
          <button class="text-white bg-indigo-700 hover:bg-indigo-800 focus:ring-4 focus:ring-indigo-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
            Regenarate join link
          </button>
        <% end %>
      </div>
    </div>

      <div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2 sm:p-6">
        <div class="flow-root">
          <h3 class="text-xl font-semibold">Other accounts</h3>
          <ul class="mb-6 divide-y divide-gray-200">
            <%= render @users %>
          </ul>
        </div>
      </div>
    <% end %>

  </div>

  </div>
</div>